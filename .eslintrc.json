{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "semi": ["error", "always"],
        "prefer-const": "error",
        "no-var": "error",
        "object-shorthand": "error",
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "quotes": ["error", "single"],
        "padded-blocks": ["error", {
            "blocks": "never"
        }],
        "prefer-template": "off",
        "complexity": ["error", {
            "max": 10
        }],
        "max-statements": ["error", 10, {
            "ignoreTopLevelFunctions": false
        }],
        "no-multiple-empty-lines": "error",
        "block-scoped-var": "error",
        "default-case": "error",
        "eqeqeq": "error",
        "guard-for-in": "error",
        "no-extra-bind": "error",
        "no-implicit-coercion": "error",
        "new-cap": "warn",
        "global-require": "error",
        "callback-return": "error",
        "no-console": "off"
    }
}